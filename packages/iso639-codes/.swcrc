{
  "$schema": "http://json.schemastore.org/swcrc",
  "module": {
    "type": "es6"
  },
  "exclude": [
    ".*\\.test\\.tsx?"
  ],
  "jsc": {
    "externalHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@": [
        "./src/index"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true
    }
  }
}
